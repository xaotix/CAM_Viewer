<mui:ModernWindow x:Class="VisualizadorCAM.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  Title="mui" 
                  xmlns:local="clr-namespace:DLMHelix;assembly=DLMHelix"
                  xmlns:HelixToolkit="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
                          xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock"

                  Style="{StaticResource BlankWindow}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="100" MaxWidth="250"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
            
        <TabControl>
            <TabItem Header="Visualizar">
            <Grid Margin="5,5,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>

                </Grid.RowDefinitions>
                    <Button Content="Abrir Pasta..." Margin="2,2,2,2" Click="seleciona_pasta" Name="bt_abre_pasta"></Button>
                    <TextBox IsReadOnly="True"  x:Name="pasta_sel" Text="Selecione..." VerticalAlignment="Center" Grid.Row="1" Margin="2,2,2,2"></TextBox>
                    <ListView x:Name="cams_lista" Grid.Row="10" Margin="2,2,2,2" SelectionMode="Single" SelectionChanged="carregar_cam"></ListView>
            </Grid>
            </TabItem>
            <TabItem Header="Criar" Name="tab_criar">

                <Grid Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="MS" VerticalAlignment="Center" Margin="2,2,2,2" Grid.Column="1" HorizontalAlignment="Center"></Label>
                    <Label Content="MI" VerticalAlignment="Center" Margin="2,2,2,2" Grid.Column="2" HorizontalAlignment="Center"></Label>
                    <Label Content="ALM" VerticalAlignment="Center" Margin="2,2,2,2" Grid.Column="3" HorizontalAlignment="Center"></Label>
                    <ComboBox SelectionChanged="Tipo_SelectionChanged" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Name="Tipo" VerticalAlignment="Center" Margin="2,2,2,2"/>

                    <Label Grid.Column="0" Grid.Row="2" Content="Comprimento:" VerticalAlignment="Center"   Margin="2,2,2,2"></Label>
                    <TextBox Grid.Column="1" Grid.Row="2"  Text="{Binding Comprimento}" Grid.ColumnSpan="3"  VerticalAlignment="Center"  Margin="2,2,2,2" TextChanged="TextBox_TextChanged"/>
                    <Label Grid.Column="0" Grid.Row="3" Content="Larguras:" VerticalAlignment="Center"    Margin="2,2,2,2"></Label>
                    <TextBox Grid.Column="1" Grid.Row="3"  Text="{Binding Largura}"  VerticalAlignment="Center"  Margin="2,2,2,2"  TextChanged="TextBox_TextChanged"></TextBox>
                    <TextBox Grid.Column="2" Grid.Row="3"  Text="{Binding Largura2}" VerticalAlignment="Center"  Margin="2,2,2,2"  TextChanged="TextBox_TextChanged"></TextBox>
                    <Label Grid.Column="0" Grid.Row="4" Content="Espessuras:" VerticalAlignment="Center"   Margin="2,2,2,2"></Label>
                    <TextBox Grid.Column="1" Grid.Row="4"  Text="{Binding Espessura}" VerticalAlignment="Center"  Margin="2,2,2,2"  TextChanged="TextBox_TextChanged"></TextBox>
                    <TextBox Grid.Column="2" Grid.Row="4"  Text="{Binding Espessura2}" VerticalAlignment="Center"  Margin="2,2,2,2"  TextChanged="TextBox_TextChanged"></TextBox>
                    <TextBox Grid.Column="3" Grid.Row="4"  Text="{Binding Alma}" VerticalAlignment="Center"  Margin="2,2,2,2"  TextChanged="TextBox_TextChanged"></TextBox>
                    <Label Grid.Column="0" Grid.Row="5" Content="Altura:" VerticalAlignment="Center"   Margin="2,2,2,2"></Label>
                    <TextBox Grid.Column="1" Grid.Row="5"  Text="{Binding Altura}" VerticalAlignment="Center" Grid.ColumnSpan="3"  Margin="2,2,2,2"  TextChanged="TextBox_TextChanged"></TextBox>
                    <Label Grid.Column="0" Grid.Row="6" Content="3° Abas:" VerticalAlignment="Center"   Margin="2,2,2,2"></Label>
                    <TextBox Grid.Column="1" Grid.Row="6"  Text="{Binding AbaS}" VerticalAlignment="Center"  Margin="2,2,2,2"  TextChanged="TextBox_TextChanged"></TextBox>
                    <TextBox Grid.Column="2" Grid.Row="6"  Text="{Binding AbaI}" VerticalAlignment="Center"  Margin="2,2,2,2"  TextChanged="TextBox_TextChanged"></TextBox>
                    <Button Grid.Row="7" Grid.ColumnSpan="4" Grid.Column="0" Content="Vizualizar" Click="visualiza_cam_criado" Margin="2,2,2,2"></Button>
                    <Button Grid.Row="8" Grid.ColumnSpan="4" Grid.Column="0" Content="Abrir Pasta" Click="ver_pasta" Margin="2,2,2,2"></Button>
                    <Button Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="4" Content="Gerar" Click="gerar_cam" Margin="2,2,2,2"></Button>
                </Grid>

            </TabItem>
        </TabControl>
        <Separator Grid.Column="1" Background="Transparent"></Separator>
        <Grid Grid.Column="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Menu Background="Transparent" VerticalAlignment="Center">
                <MenuItem Header="_Arquivo" Background="Transparent">
                    <MenuItem Header="_Abrir" Click="abre_cam"></MenuItem>
                    <MenuItem Header="_Desmembrar" Click="desmembra"></MenuItem>
                </MenuItem>

                <!--<MenuItem Header="Render Banzo" Click="cria_banzo"/>-->
            </Menu>
            <local:CAMViewer Name="view" Grid.Row="1"/>
        </Grid>
    </Grid>
</mui:ModernWindow>
